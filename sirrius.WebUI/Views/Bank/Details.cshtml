@model sirrius.Data.Entity.Bank

@{
    ViewData["Title"] = "Banka Detayı";
    ViewData["PageName"] = "/bank/index";
}


<h1><a class="btn btn-sm btn-primary fs-lg" asp-action="Index"><i class="fa fa-backspace"></i> Geri</a></h1>
<div class="row">
    <div class="offset-md-2 col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="card-title text-uppercase">Banka Detayı</h4>
            </div>
            <div class="card-body">
                <dl>
                    <dt>Banka Kodu</dt>
                    <dd>
                        @Model.Code
                    </dd>
                </dl>
                <dl>
                    <dt>Banka Adı</dt>
                    <dd>
                        @Model.Name
                    </dd>
                </dl>
                <dl>
                    <dt>Ülke Adı</dt>
                    <dd>
                        @Model.Country.Name
                    </dd>
                </dl>
                <dl>
                    <dt>Açıklama</dt>
                    <dd>
                        @Model.Description
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

@section pagescripts {
    <script src="~/scripts/pages/bank/detail.js"></script>
}